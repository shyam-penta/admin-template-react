{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",

    /* Target + libs */
    "target": "ES2022",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],

    /* Module settings */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",

    /* Output */
    "noEmit": true,

    /* React JSX */
    "jsx": "react-jsx",

    /* Node support (for vite.config.ts, path, __dirname, etc.) */
    "types": ["node"],

    /* Strictness & linting */
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    
    "baseUrl": "src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@core/*": ["core/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@services/*": ["services/*"],
      "@store/*": ["store/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "src",
    "vite.config.ts"
  ]
}
